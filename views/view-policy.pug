doctype html
html
    head
        title= title
        link(rel='stylesheet',href='/styles/view-policy.css')
        link(rel='stylesheet',href='//keystone.forgegraphics.com/scripts/ckeditor/contents.css')
    body.editor
        h2= title
        h3= message


        div.policy-content.cke_editable!= policycontent

        div.view-button
            button(type='button' class='view-btn') Policy List
        div.edit-button
            button(type='button' class='edit-btn') Edit Policy


        script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(type='text/javascript' src='/scripts/view-policy.js')

